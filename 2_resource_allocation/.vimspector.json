{
  "configurations": {
    "cpptools": {
      "adapter": "vscode-cpptools",
      "variables": {
        "BUILDME": {
          "shell": "make"
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/${fileBasenameNoExtension}.elf",
        "stopOnEntry": true,
        "MIMode": "gdb"
      }
    }
  }
}
